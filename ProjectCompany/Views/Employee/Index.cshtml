@model IEnumerable<ProjectCompany.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>

<div>
    <a asp-action="Add" class="btn btn-success">Add New Employee</a>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Age</th>
            <th>Tel No</th>
            <th>Salary</th>
            <th>Department</th> <!-- Add Department column -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Age</td>
                <td>@item.TelNo</td>
                <td>@item.Salary</td>
                <td>@item.DepartmentName</td> <!-- Display department name -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

